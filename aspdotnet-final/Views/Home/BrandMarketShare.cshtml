@{
    ViewBag.Title = "Brand Market Share";

    ViewBag.BrandsMarketShares = MvcApplication.GetBrandsMarketShare();
}

<div class="x_panel">
    <h4>Brand Market Share Out of Total Quantity of Products Sold</h4>

    @foreach (string[] brand in ViewBag.BrandsMarketShares)
    {
        <div class="widget_summary">
            <div class="w_left w_25">
                <span>@brand[0]</span>
            </div>
            <div class="w_center w_55">
                <div class="progress">
                    <div class="progress-bar bg-green" role="progressbar" aria-valuenow="@brand[2]" aria-valuemin="0" aria-valuemax="100" style="width: @brand[2]%;">
                        <!--<span class="sr-only">60% Complete</span>-->
                    </div>
                </div>
            </div>
            <div class="w_right w_20">
                <span>@string.Format("{0:#,##0}", brand[1])</span>
            </div>
            <div class="clearfix"></div>
        </div>
    }
</div>